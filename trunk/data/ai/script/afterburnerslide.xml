<SCRIPT>
 <DEFAULT>
   <ADD>
   <VECTOR Position="v"/>
   <VECTOR x="1" y="0" z="0"/>
   </ADD>
   <FLOAT value="1"/>
 </DEFAULT>
 <MatchLin Afterburn="true" terminate="1" local="0">
  <SCALE>
   <ADD>
    <NORMALIZE>
     <SUB>
      <VECTOR TargetPos="u"/>
      <VECTOR Position="v"/>
     </SUB>
    </NORMALIZE>
    <SCALE>
     <Normalize>
      <CROSS>
       <VECTOR Dup="u-v"/>
       <VECTOR TargetV=""/>
      </CROSS>
     </Normalize>
     <FLOAT value=".5"/>
    </SCALE>
   </ADD>
   <FLOAT value="10000"/>
  </SCALE>
   <VECTOR Dup="u-v+perpendicular val"/>
 </MatchLin>
 <ExecuteFor time=".5">
  <ChangeHead>
<!-- vector is already duped, and change heading already subtracts local position anyhow-->
   <ADD>
    <VECTOR Position="v"/>
   </ADD>
  </ChangeHead>
 </ExecuteFor>
 <FaceTarget terminate="0">
 </FaceTarget>

</SCRIPT>
