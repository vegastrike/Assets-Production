<AggressiveAI> 

<!-- MeterDistance less than .1-->
<MeterDistance max="100"> 
  <threat max=".5" script="++turnaway.xml">
  </threat>
</MeterDistance>
<MeterDistance max="200"> 
  <threat min=".5" max=".9" script="++afterburnerslide.xml">
  </threat>
</MeterDistance>
<MeterDistance max="200" script="++turnaway.xml"> 
  <threat min=".9" script="++evade.xml">
  </threat>
</MeterDistance>
<!-- MeterDistance midrange .1-->
<MeterDistance min="200" max="600">
  <threat max=".8" script="++turntowards.xml">
  </threat>
</MeterDistance>
<MeterDistance min="200" max="600">
  <threat min=".8"  script="++afterburnerslide.xml">
  </threat>
</MeterDistance>

<!-- MeterDistance far out-->
<MeterDistance min="600">
  <threat max=".8" script="++afterburn-turntowards.xml">
  </threat>
</MeterDistance>
<MeterDistance min="600" script="++evade.xml">
  <threat min=".8"  script="++afterburn-turntowards.xml">
  </threat>
</MeterDistance>

</AggressiveAI>
