<AggressiveAI> 

<!-- distance less than .1-->
<distance max=".1"> 
  <threat max=".5" script="kickstop.xml">
  </threat>
</distance>
<distance max=".1"> 
  <threat min=".5" max=".9" script="afterburnerslide.xml">
  </threat>
</distance>
<distance max=".1" script="turnaway.xml"> 
  <threat min=".9" script="evade.xml">
  </threat>
</distance>
<!-- distance midrange .1-->
<distance min=".1" max=".6">
  <threat max=".8" script="turntowards.xml">
  </threat>
</distance>
<distance min=".1" max=".6">
  <threat min=".8"  script="afterburnerslide.xml">
  </threat>
</distance>

<!-- distance far out-->
<distance min=".6">
  <threat max=".8" script="afterburn-turntowards.xml">
  </threat>
</distance>
<distance min=".6" script="evade.xml">
  <threat min=".8"  script="afterburn-turntowards.xml">
  </threat>
</distance>

</AggressiveAI>
